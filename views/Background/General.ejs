<section class="content">
    <form id="settings-general" novalidate="novalidate" method="post">
        <fieldset>
            <section class="page-actions">
                <button class="button-save">Save</button>
            </section>
            <div class="form-group">
                <label for="blog-title">Blog Title</label>
                <% if(docs.title){ %>
                <input id="blog-title" name="title" type="text" value="<%= docs.title %>">
                <% }else{ %>
                <input id="blog-title" name="title" type="text" value="">
                <% } %>
                <p>The name of your blog</p>
            </div>

            <div class="form-group description-container">
                <label for="blog-description">Blog Description</label>
                <% if(docs.description){ %>
                <textarea id="blog-description" name="description"><%= docs.description %></textarea>
                <% }else{ %>
                <textarea id="blog-description" name="description"></textarea>
                <% } %>
                <p>
                    Describe what your blog is about
                    <span class="word-count" style="color: rgb(158, 157, 149);">175</span>
                </p>

            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label for="email-address">Email Address</label>
                <input id="email-address" name="general[email-address]" type="email" value="<%= docs.email  %>" autocapitalize="off" autocorrect="off">
                <p>Address to use for admin notifications</p>
            </div>

        </fieldset>
    </form>
</section>