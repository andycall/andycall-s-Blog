<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<style>
	@charset "UTF-8";
.wheel {
  width: 500px;
  height: 500px;
  top: 30px;
  left: 50%;
  margin-left: -250px;
  border-radius: 100%;
  position: absolute;
  transition-delay: 0s;
  transition-property: -webkit-transform;
  transition-duration: 0.5s;
  transition-timing-function: ease-in-out;
  -webkit-transform-origin: 50% 50%;
  -webkit-transform: rotate(-42.5deg);
}
.wheel button.submit {
  font-family: 'Open Sans', sans-serif;
  outline: none;
  display: block;
  color: #eee;
  font-weight: 300;
  position: absolute;
  width: 100px;
  height: 100px;
  border-radius: 100%;
  border: 0;
  background: #222;
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
  z-index: 100;
  left: 50%;
  top: 50%;
  margin-left: -50px;
  margin-top: -50px;
  transition: opacity 1s, box-shadow 0.3s;
  pointer-events: none;
  opacity: 0;
}
.wheel button.submit:hover {
  box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5);
}
.wheel button.submit:focus {
  opacity: 1;
  pointer-events: auto;
}

ul {
  margin: 0;
  padding: 0;
}
ul > li {
  width: 250px;
  height: 250px;
  margin: 0;
  padding: 0;
  list-style-type: none;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  border-top-left-radius: 250px;
  border-top-right-radius: 0px;
  -webkit-transform-origin: 100% 100%;
  pointer-events: none;
  transition-delay: 0s;
  transition-property: -webkit-transform;
  transition-duration: 3s;
  transition-timing-function: ease-in-out;
}
ul > li:nth-child(1) {
  -webkit-transform: rotate(0deg);
  z-index: 8;
  *zoom: 1;
  filter: progid:DXImageTransform.Microsoft.gradient(gradientType=1, startColorstr='#FF14B190', endColorstr='#FFFFFFFF');
  background-color: #14b190;
}
ul > li:nth-child(2) {
  -webkit-transform: rotate(90deg);
  z-index: 7;
  *zoom: 1;
  filter: progid:DXImageTransform.Microsoft.gradient(gradientType=1, startColorstr='#FF15B694', endColorstr='#FFFFFFFF');
   background-color: #14b190;
}
ul > li:nth-child(3) {
  -webkit-transform: rotate(180deg);
  z-index: 6;
  *zoom: 1;
  filter: progid:DXImageTransform.Microsoft.gradient(gradientType=1, startColorstr='#FF15BA97', endColorstr='#FFFFFFFF');
   background-color: #14b190;
}
ul > li:nth-child(4) {
  -webkit-transform: rotate(270deg);
  z-index: 5;
  *zoom: 1;
  filter: progid:DXImageTransform.Microsoft.gradient(gradientType=1, startColorstr='#FF16BF9B', endColorstr='#FFFFFFFF');
   background-color: #14b190;
}
ul > li > input, ul > li > .sent-label {
  font-family: 'Open Sans';
  font-size: 18px;
  color: #eee;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
  outline: none;
  pointer-events: auto;
  display: block;
  position: absolute;
  top: 60%;
  left: 8%;
  width: 250px;
  border: 0;
  text-align: left;
  padding-left: 20px;
  background: none;
  -webkit-transform-origin: 50%;
  -webkit-transform: rotate(42.5deg);
}
ul > li > .sent-label {
  display: none;
  opacity: 0;
  font-size: 1.2em;
}

.closed li:nth-child(1) {
  -webkit-transform: rotateX(0deg);
}
.closed li:nth-child(2) {
  -webkit-transform: rotateX(0deg);
}
.closed li:nth-child(3) {
  -webkit-transform: rotateX(0deg);
}
.closed li:nth-child(4) {
  -webkit-transform: rotateX(0deg);
}

.sent.wheel {
  transition-delay: 0s, 3s;
  transition-property: -webkit-transform, left;
  transition-duration: 1s, 0.5s;
  transition-timing-function: ease-in-out, ease-in;
  left: 150%;
}
.sent .sent-label {
  display: block;
  transition: opacity 1s;
  opacity: 1;
}
.sent input {
  pointer-events: none;
  transition: opacity 1s;
  opacity: 0;
}
.sent input::-webkit-input-placeholder {
  /* WebKit browsers */
  opacity: 0;
}
.sent input:-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  opacity: 0;
}
.sent input::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  opacity: 0;
}
.sent input:-ms-input-placeholder {
  /* Internet Explorer 10+ */
  opacity: 0;
}
.sent li:nth-child(1) {
  -webkit-transform: rotateX(0deg);
}
.sent li:nth-child(2) {
  -webkit-transform: rotateX(0deg);
}
.sent li:nth-child(3) {
  -webkit-transform: rotateX(0deg);
}
.sent li:nth-child(4) {
  -webkit-transform: rotateX(0deg);
}
.sent li:nth-child(5) {
  -webkit-transform: rotateX(0deg);
}
.sent li:nth-child(6) {
  -webkit-transform: rotateX(0deg);
}
.sent li:nth-child(7) {
  -webkit-transform: rotateX(0deg);
}
.sent li:nth-child(8) {
  -webkit-transform: rotateX(0deg);
}

html, body {
  width: 100%;
  height: 100%;
}

body {
  font-family: 'Open Sans', sans-serif;
  font-size: 18px;
  font-weight: 300;
  background: #222;
  position: relative;
}

[type="submit"] {
  opacity: 0;
  pointer-events: none;
}

input::-webkit-input-placeholder {
  /* WebKit browsers */
  color: #eee;
  opacity: 1;
}
input:-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  color: #eee;
  opacity: 1;
}
input::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  color: #eee;
  opacity: 1;
}
input:-ms-input-placeholder {
  /* Internet Explorer 10+ */
  color: #eee;
  opacity: 1;
}

input:not(:focus)::-webkit-input-placeholder {
  /* WebKit browsers */
  opacity: 0.4;
}
input:not(:focus):-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  opacity: 0.4;
}
input:not(:focus)::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  opacity: 0.4;
}
input:not(:focus):-ms-input-placeholder {
  /* Internet Explorer 10+ */
  opacity: 0.4;
}

	</style>
</head>
<body>
	<div class="wrapper">
  <div class="wheel closed">
    <form method="post" id="login_form">
      <ul>
        <li>
          <label class="sent-label">Let's Go!</label>
          <input type="text" placeholder="Hi there! Press Tab..." tabindex="1" readonly>
        </li>
        <li>
          <input type="text"  placeholder="Please type your username!" tabindex="2" name="username" disabled="disabled" >
        </li>
        <li>
          <input type="password" placeholder="and type your password" tabindex="3" name="password" disabled="disabled">
        </li>
        <li>
          <input type="text" placeholder="Type Enter to Go!" tabindex="4" readonly disabled="disabled">
        </li> 
      </ul>
      <input type="submit" name="submit" id="go">
    </form>
  </div>
</div>
</body>
<script type="text/javascript" src="http://code.jquery.com/jquery-2.1.0.min.js"></script>
<script type="text/javascript">
	function setWheelRotation(rotation) {
  $('.wheel').css('transform', 'rotate('+rotation+'deg)');
}

function firstInputField() {
  return $('.wheel li:first-child > input');
}
function getSubmit(){
  return $('#submit');
}
$('input').on('focus', function() {
  var index = $(this).parent().index();
  var rotation = -42.5 - (90 * index);
  setWheelRotation(rotation);
});

var lastTabIndex = $('[tabindex]').length;
var checker= [new RegExp(),new RegExp(),new RegExp(/^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]+$/),new RegExp(/^[a-zA-Z0-9]{4,16}$/),new RegExp()];
var error = ["","","username error","Password Error",""];
var indexArr = [1,2,3,4];
$('[tabindex]').on('keydown',function(event){
    var currentElement = $(this).get(0);
    var curIndex = currentElement.tabIndex;
    var curValue = currentElement.value;
  if (event.keyCode == 9) { // Tab pressed
      event.preventDefault();
      // console.log('123');
      $('[tabindex=' + parseInt(curIndex + 1) + ']' ).removeAttr('disabled');
      if (event.shiftKey) {
        if (curIndex == 1) {
          return;
        } else {
          curIndex--;
        }
      } else {
        if (curIndex == lastTabIndex) {
          return;
        } else {
          curIndex++;
        }
      }
      $('[tabindex='+curIndex+']').focus();
      // console.log($(this));
      if(!checker[curIndex-1].test(curValue)){
          curIndex --;
          $('input').removeAttr('tabindex');
            setTimeout(function(){
              $('[placeholder]').each(function(index,value){
                $(value).attr('tabindex',index+1);
              });
              $('[tabindex='+curIndex+']').focus();
              $('[tabindex='+curIndex+']').val("");
              $('[tabindex='+curIndex+']').attr('placeholder',error[curIndex]);
              $('[tabindex='+parseInt(curIndex+1) + ']').attr('disabled','disabled');
          }, 500);
      }
     }
     else if(curIndex !==4 && (event.keyCode == 13 || event.keyCode == 108) ){
        event.preventDefault();
        return false;
     }
     else if(curIndex == 4 && (event.keyCode == 13 || event.keyCode == 10) ){
        event.preventDefault();
        $('.wheel').addClass('sent');
        setWheelRotation(677.5);
        setTimeout(function() {
          // $('.wheel').removeClass('sent');
          // $('input').val('');
          document.getElementById('go').click();
        }, 3350);
    }
});


$(document).ready(function() {
  $('.wheel').removeClass('closed');
  firstInputField().focus();
});
</script>
</html>